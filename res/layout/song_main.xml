<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" android:weightSum="3"
	android:background="@drawable/wall6"
	tools:context=".MainActivity" >

    <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="0.3" android:weightSum="2">


        <Button android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:onClick="musicStop" android:background="@drawable/back_button" android:layout_marginLeft="2dp"
                android:textStyle="normal|italic"/>

        <Button android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Back"
                android:onClick="musicBack" android:background="@drawable/back_button" android:layout_marginLeft="2dp"
                android:textStyle="normal|italic"/>


    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="2.7">



	<!-- song list -->

	<ListView
		android:id="@+id/song_list"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
	</ListView>

    </LinearLayout>



</LinearLayout>